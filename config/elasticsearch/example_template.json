{
  "index_patterns": [
    "cloud-*"
  ],
  "settings": {
    "number_of_shards": 1,
    "number_of_replicas": 0,
    "index.mapping.total_fields.limit": 10000,
    "refresh_interval": "20s"
  },
  "mappings": {
    "_meta": {
      "version": "1.6.0-dev"
    },
    "date_detection": false,
    "dynamic_templates": [
      {
        "strings_as_keyword": {
          "mapping": {
            "ignore_above": 1024,
            "type": "keyword"
          },
          "match_mapping_type": "string"
        }
      }
    ],
    "properties": {
      "@timestamp": {
        "type": "date"
      },
      "certego": {
        "properties": {
          "sender": {
            "properties": {
              "ip": { "type": "ip" }
            }
          }
        }
      },
      "login_timestamp": {
        "type": "date"
      },
      "srcip": {
        "type": "keyword"
      },
      "syslog_host": {
        "type": "ip"
      },
      "geoip": {
        "properties": {
          "ip": {
            "type": "ip"
          }
        }
      }
    }
  }
}